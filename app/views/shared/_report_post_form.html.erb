<%= form_for(@reported_comment, html: { multipart: true }) do |f|%>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: 'Why do you want to report this post' %>
  <div>
  <%= f.hidden_field :micropost_id %>
  <%= f.submit 'send', class: "btn btn-primary" %>
<% end %>