<%= form_for(@reported_comment, html: { multipart: true }) do |f|%>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t('report.content') %>
  <div>
  <%= f.hidden_field :micropost_id %>
  <%= f.submit t('report.button'), class: "btn btn-primary" %>
<% end %>