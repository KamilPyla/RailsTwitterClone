<%= form_for(@user, html: { multipart: true }) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<%= f.label :name %>
<%= f.text_field :name, class: 'form-control' %>

<%= f.label :email %>
<%= f.email_field :email, class: 'form-control' %>
 
<%= f.label :gender %>
<%= f.select :gender, [['Male', 'm'], ['Female', 'f']], {}, class: 'form-control' %>

<%= f.label :password %>
<%= f.password_field :password, class: 'form-control' %>

<%= f.label :password_confirmation, 'Confirmation' %>
<%= f.password_field :password_confirmation, class: 'form-control' %>

<%= f.label :user_avatar, 'Choose your profile picture (optional)' %>
<span class="picture">
  <%= f.file_field :user_avatar, accept: 'image/jpeg, image/gif, image/png' %>
</span>

<%= f.submit yield(:button_name), class: 'btn btn-primary' %>

<% end %>
